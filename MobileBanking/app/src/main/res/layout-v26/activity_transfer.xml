<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboardhidelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:backgroundTint="#189F1D"
    tools:context=".TransferActivity">

    <TableRow
        android:id="@+id/simpleTableLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Name"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userTransferName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="15dp"
            android:background="#fff"
            android:hint="name"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="#000" />
    </TableRow>

    <TableRow
        android:id="@+id/simpleTableLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Recipient"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#fff"
            android:padding="20dp"
            android:paddingStart="15dp"
            android:textColor="#000" />
    </TableRow>

    <TableRow
        android:id="@+id/simpleTableLayout7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="Balance"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:background="#fff"
            android:hint="Balance"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:paddingStart="15dp"
            android:textColor="#000" />


    </TableRow>

    <TableRow
        android:id="@+id/simpleTableLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="15dp">

        <Button
            android:id="@+id/confermTransferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transaction_button"
            android:backgroundTint="#80DEEA"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:text="Transfer"
            android:textAlignment="center"
            android:textSize="26sp" />
    </TableRow>
</TableLayout>